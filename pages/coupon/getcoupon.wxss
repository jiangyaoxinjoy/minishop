.wrapper {
    width: 90%;
    border-radius: 12rpx;
    color: #fff;
    margin: auto;
    margin-top: 10px;
    overflow: hidden;
    border: 1px solid #d4d3d8;
}
.error .sawtooth{
  background: #b4b4b4;
}
.sawtooth{
  background:#ee8246;
  position: relative;
  display: flex;
  padding: 18px 20px;
}
.sawtooth:after {
    content: ' ';
    width: 100%;
    height: 0;
    position: absolute;
    bottom: 0;
    left: 0
}
.sawtooth:after {
    border-bottom: 8px dotted #fff;
    bottom: -4px;
}
.top{
  flex: 1;
  display: flex;
}
.discount{
  width: auto;
  margin-right: 20rpx;
}
.discount text{
  font-size: 1.8em;
}
.name text{
  display: block;
  font-size: 1.1em;
}
.error .msg,.error .desc{
  color: #b4b4b4;
}
.msg{
  padding: 0 40rpx;
  background: #fff;
  color: #ee8246;
  border-radius: 45rpx;
  font-size: 0.85em;
  height: 30px;
}
.msg text{
  line-height: 30px;
}
.desc{
  background: #fff;
  color: #ee8246;
  font-size: 0.85em;
  padding: 20rpx;
}
.bottom text{
  display: block;
  line-height: 1.5;
}